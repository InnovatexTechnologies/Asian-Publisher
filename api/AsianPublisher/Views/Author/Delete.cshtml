@model AsianPublisher.Models.Author

@{
    ViewData["Title"] = "Delete";
}
@if (!string.IsNullOrEmpty(ViewBag.error))
{
    <div class="alert alert-danger">
        @ViewBag.error
    </div>
}
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Author</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.name
        </dd>
        <dt class="col-sm-2">
            MobileNo
        </dt>
        <dd class="col-sm-10">
            @Model.mobileNo
        </dd>
        <dt class="col-sm-2">
            EmailId
        </dt>
        <dd class="col-sm-10">
            @Model.emailId
        </dd>
        <dt class="col-sm-2">
            Content
        </dt>
        <dd class="col-sm-10">
            @Model.content
        </dd>
        <dt class="col-sm-2">
            Content2
        </dt>
        <dd class="col-sm-10">
            @Model.content2
        </dd>
        <dt class="col-sm-2">
            Code
        </dt>
        <dd class="col-sm-10">
            @Model.code
        </dd>
    </dl>

    <form asp-action="Delete">
        <input name="url" hidden value="@ViewBag.url" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a href="@ViewBag.url">Back to List</a>
    </form>
</div>

