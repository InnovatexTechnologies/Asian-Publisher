@model AsianPublisher.Models.Book

@{
    ViewData["Title"] = "Delete";
}
@if (!string.IsNullOrEmpty(ViewBag.error))
{
    <div class="alert alert-danger">
        @ViewBag.error
    </div>
}
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.name
        </dd>
        <dt class="col-sm-2">
            MRP
        </dt>
        <dd class="col-sm-10">
            @Model.mRP
        </dd>
        <dt class="col-sm-2">
            BookCode
        </dt>
        <dd class="col-sm-10">
            @Model.bookCode
        </dd>
        <dt class="col-sm-2">
            ISBN
        </dt>
        <dd class="col-sm-10">
            @Model.iSBN
        </dd>
        <dt class="col-sm-2">
            Language
        </dt>
        <dd class="col-sm-10">
            @Model.languageNav?.name
        </dd>
        <dt class="col-sm-2">
            SamplePdf
        </dt>
        <dd class="col-sm-10">
            @Model.samplePdf
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            @Model.image
        </dd>
    </dl>

    <form asp-action="Delete">
        <input name="url" hidden value="@ViewBag.url" />
        <input name="samplePdfFile" hidden value="@Model.samplePdf" class="btn btn-danger" />
        <input name="image" hidden value="@Model.image" class="btn btn-danger" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a href="@ViewBag.url">Back to List</a>
    </form>
  
</div>
