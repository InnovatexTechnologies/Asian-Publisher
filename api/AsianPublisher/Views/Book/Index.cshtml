@model IEnumerable<AsianPublisher.Models.Book>

@{
    ViewData["Title"] = "Index";
    string myurl = Context.Request.Path + Context.Request.HttpContext.Request.QueryString;
}
<div class="col-lg-2" style="float:left;">
    <h4>Course List</h4>
</div>
<div class="col-lg-7" style="float:left;">
    <form method="post" action="~/Book/Index">
        <div class="row">
            <div class="col-lg-3">
                <label class="control-label">Language</label>
                <select name="languageId" id="languageId" class="form-control">
                    <option value="">--Select--</option>
                    @foreach (var obj in ViewBag.Languages)
                    {
                        if (ViewBag.languageId != null && ViewBag.languageId == obj.id)
                        {
                            <option value="@obj.id" selected>@obj.name</option>
                        }
                        else
                        {
                            <option value="@obj.id">@obj.name</option>
                        }
                    }
                </select>
            </div>
            @* <div class="col-3">
            <label class="control-label">Book</label>
            <select name="bookId" id="bookId" class="form-control">
            <option value="">--Select--</option>
            @foreach (var obj in ViewBag.Books)
            {
            if (ViewBag.bookId != null && ViewBag.bookId == obj.id)
            {
            <option value="@obj.id" selected>@obj.name</option>
            }
            else
            {
            <option value="@obj.id">@obj.name</option>
            }
            }
            </select>
            </div> *@
            <div class="col-lg-3">
                <label class="control-label">Book Name</label>
                <input name="bookId" id="bookId" class="form-control" />
            </div>
            <div class="col-lg-3">
                <label class="control-label">ISBN</label>
                <input name="iSBN" id="iSBN" class="form-control" />
            </div>
            <div class="col-lg-3" style="padding-top:32px;"><button class="btn-sm btn-info" type="submit">Submit</button></div>
        </div>
    </form>
</div>
<div class="col-lg-3" style="float:left; padding-top:32px;">
    <a href="~/Book/Create?url=@myurl" class="btn-sm btn-success">Create New</a>
    <a href="/Book/GenerateExcel?languageId=@ViewBag.languageId&iSBN=@ViewBag.iSBN&bookId=@ViewBag.bookId" class="btn-sm btn-primary">Excel</a>
    <a href="/Book/GeneratePdf?languageId=@ViewBag.languageId&iSBN=@ViewBag.iSBN&bookId=@ViewBag.bookId" class="btn-sm btn-secondary">PDF</a>
</div>
<br />
<br />
<br />
<br />
<table class="table table-striped">
    <thead>
        <tr>
            <th width="10%">
                ISBN
            </th>
            <th width="10%">
                Name
            </th>
            <th width="10%">
                Language
            </th>
            <th width="10%">
                Authors
            </th>
            <th width="10%">
                Course
            </th>
            <th width="20%">
                Description
            </th>
            <th width="15%">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.iSBN
                </td>
                <td>
                    @item.name
                </td>
                <td>
                    @item.languageNav?.name
                </td>
                <td>
                    @string.Join(", ", item.authors.Select(o => o.name).ToList())
                </td>
                <td>
                    @string.Join(", ", item.courseSemesters.Select(o => o.combine).ToList())
                </td>
                <td>
                    @Html.Raw(item.description)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id, url = myurl }, new { @class = "btn-sm btn-success" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.id, url = myurl }, new { @class = "btn-sm btn-danger" })
                    <a href="/BookAuthor/Index?bookId=@item.id&languageId=@ViewBag.languageId&iSBN=@ViewBag.iSBN&bookIdN=@ViewBag.bookId" class="btn-sm btn-info">Authors</a>
                </td>
            </tr>
        }
    </tbody>
</table>
