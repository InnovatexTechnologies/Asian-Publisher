@model AsianPublisher.Models.Catalogue

@{
    ViewData["Title"] = "Delete";
}
@if (!string.IsNullOrEmpty(ViewBag.error))
{
    <div class="alert alert-danger">
        @ViewBag.error
    </div>
}
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Catalogue</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Course
        </dt>
        <dd class="col-sm-10">
            @Model.courseNav?.name
        </dd>
        <dt class="col-sm-2">
           Semester
        </dt>
        <dd class="col-sm-10">
            @Model.semesterNav?.name
        </dd>
        <dt class="col-sm-2">
           Book
        </dt>
        <dd class="col-sm-10">
            @Model.bookNav?.name
        </dd>
        <dt class="col-sm-2">
           Code
        </dt>
        <dd class="col-sm-10">
            @Model.code
        </dd>
    </dl>

    <form asp-action="Delete">
            <input name = "url" hidden value = "@ViewBag.url" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a href="@ViewBag.url">Back to List</a>
    </form>
</div>
