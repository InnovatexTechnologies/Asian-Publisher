@model IEnumerable<AsianPublisher.Models.Catalogue>

@{
    ViewData["Title"] = "Index";
    string myurl = Context.Request.Path + Context.Request.HttpContext.Request.QueryString;
}

<form method="post" action="~/Catalogue/Index">
    <div class="row">
        <div class="col-3">
            <label class="control-label">Course</label>
            <select name="courseId" id="courseId" class="form-control">
                <option value="">--Select--</option>
                @foreach (var obj in ViewBag.Courses)
                {
                    if (ViewBag.courseId != null && ViewBag.courseId == obj.id)
                    {
                        <option value="@obj.id" selected>@obj.name</option>
                    }
                    else
                    {
                        <option value="@obj.id">@obj.name</option>
                    }
                }
            </select>
        </div>
        <div class="col-3">
            <label class="control-label">Semester</label>
            <select name="semesterId" id="semesterId" class="form-control">
                <option value="">--Select--</option>
                @foreach (var obj in ViewBag.Semesters)
                {
                    if (ViewBag.semesterId != null && ViewBag.semesterId == obj.id)
                    {
                        <option value="@obj.id" selected>@obj.name</option>
                    }
                    else
                    {
                        <option value="@obj.id">@obj.name</option>
                    }
                }
            </select>
        </div>
        <div class="col-3">
            <label class="control-label">Book</label>
            <select name="bookId" id="bookId" class="form-control">
                <option value="">--Select--</option>
                @foreach (var obj in ViewBag.Books)
                {
                    if (ViewBag.bookId != null && ViewBag.bookId == obj.id)
                    {
                        <option value="@obj.id" selected>@obj.name</option>
                    }
                    else
                    {
                        <option value="@obj.id">@obj.name</option>
                    }
                }
            </select>
        </div>
        <div class="col-3"><button class="btn btn-info" type="submit">Submit</button></div>
    </div>
</form>
<h1>Index</h1>

<p>
    <a href="~/Catalogue/Create?url=@myurl" class="btn btn-success">Create New</a>
    <div>
        <a href="/Catalogue/GenerateExcel?courseId=@ViewBag.courseId&semesterId=@ViewBag.semesterId&bookId=@ViewBag.bookId" class="btn btn-primary">DOWNLOAD EXCEL</a>
        <span style="margin-right: 20px;">
            </span >
            <a href="/Catalogue/GeneratePdf?courseId=@ViewBag.courseId&semesterId=@ViewBag.semesterId&bookId=@ViewBag.bookId" class="btn btn-secondary">DOWNLOAD PDF</a>
    </div>
    <br />
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Course
            </th>
            <th>
                Semester
            </th>
            <th>
                Book
            </th>
            <th>
                Code
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.courseNav?.name
                </td>
                <td>
                    @item.semesterNav?.name
                </td>
                <td>
                    @item.bookNav?.name
                </td>
                <td>
                    @item.code
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id, url = myurl }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id, url = myurl })|
                    @Html.ActionLink("Create", "Create", new { courseId = item.courseId,semesterId = item.semesterId, bookId = item.bookId, code = item.code, url = myurl })|
                    
                </td>
            </tr>
        }
    </tbody>
</table>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
<script type="text/javascript">
    $(function () {
        $("#bookId").select2();
        $("#courseId").select2();
        $("#semesterId").select2();
    });
</script>