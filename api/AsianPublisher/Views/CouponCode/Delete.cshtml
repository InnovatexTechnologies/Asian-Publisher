@model AsianPublisher.Models.CouponCode

@{
    ViewData["Title"] = "Delete";
}
@if (!string.IsNullOrEmpty(ViewBag.error))
{
    <div class="alert alert-danger">
        @ViewBag.error
    </div>
}
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>CouponCode</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Name
        </dt>
        <dd class="col-sm-10">
            @Model.name
        </dd>
        <dt class="col-sm-2">
           Valid UpTo
        </dt>
        <dd class="col-sm-10">
            @(Model.validUpTo>0?Model.validUpTo.ToDate().ToString("dd-MMM-yyyy"):"")
        </dd>
        <dt class="col-sm-2">
           Coupon Type
        </dt>
        <dd class="col-sm-10">
            @Model.couponType
        </dd>
        <dt class="col-sm-2">
           Status
        </dt>
        <dd class="col-sm-10">
            @(Model.status == 1 ? "Yes" : "No")
        </dd>
        <dt class="col-sm-2">
           Coupon Value
        </dt>
        <dd class="col-sm-10">
            @Model.couponValue
        </dd>
        <dt class="col-sm-2">
           Minimum Order Value
        </dt>
        <dd class="col-sm-10">
            @Model.minimumOrderValue
        </dd>
        <dt class="col-sm-2">
           Maximum Discount Value
        </dt>
        <dd class="col-sm-10">
            @Model.maximumDiscountValue
        </dd>
    </dl>

    <form asp-action="Delete">
            <input name = "url" hidden value = "@ViewBag.url" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a href="@ViewBag.url">Back to List</a>
    </form>
</div>
