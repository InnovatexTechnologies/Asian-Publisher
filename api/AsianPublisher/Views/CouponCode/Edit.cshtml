@model AsianPublisher.Models.CouponCode

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>CouponCode</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit"  enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input hidden asp-for="id" class="form-control" />
                <input hidden asp-for="numId" class="form-control" />
                <input hidden asp-for="idPrefix" class="form-control" />
            <div class="form-group">
                <label class="control-label">Name</label>
                <input name="name" id="name" value="@Model.name" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Valid UpTo</label>
                <input name="validUpTo" type="date" id="validUpTo" value="@Model.validUpTo.ToDate().ToString("yyyy-MM-dd")" required class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Coupon Type</label>
                <input name="couponType" id="couponType" value="@Model.couponType" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Status</label>
                <select name="status" id="status" class="form-control" >
                    <option value="">--Select--</option>
                    @if(Model.status == 1)
                    {
                    <option value="1" selected>Yes</option>
                    <option value="0">No</option>
                    }
                    else if(Model.status==0)
                    {
                    <option value="1">Yes</option>
                    <option value="0" selected>No</option>
                    }
                    else
                    {
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Coupon Value</label>
                <input name="couponValue" id="couponValue" value="@Model.couponValue" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Minimum Order Value</label>
                <input name="minimumOrderValue" id="minimumOrderValue" value="@Model.minimumOrderValue" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Maximum Discount Value</label>
                <input name="maximumDiscountValue" id="maximumDiscountValue" value="@Model.maximumDiscountValue" class="form-control" />
            </div>
            <input name = "url" hidden value = "@ViewBag.url" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="@ViewBag.url">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
