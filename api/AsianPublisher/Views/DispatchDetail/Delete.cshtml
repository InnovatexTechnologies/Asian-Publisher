@model AsianPublisher.Models.DispatchDetail

@{
    ViewData["Title"] = "Delete";
}
@if (!string.IsNullOrEmpty(ViewBag.error))
{
<div class="alert alert-danger">
@ViewBag.error
 </div>
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>DispatchDetail</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           CourierName
        </dt>
        <dd class="col-sm-10">
            @Model.courierName
        </dd>
        <dt class="col-sm-2">
           DopicNo
        </dt>
        <dd class="col-sm-10">
            @Model.dopicNo
        </dd>
        <dt class="col-sm-2">
           DopicDate
        </dt>
        <dd class="col-sm-10">
            @(Model.dopicDate>0?Model.dopicDate.ToDate().ToString("dd-MMM-yyyy"):"")
        </dd>
        <dt class="col-sm-2">
           Order
        </dt>
        <dd class="col-sm-10">
            @Model.orderNav?.name
        </dd>
    </dl>

    <form asp-action="Delete">
            <input name = "url" hidden value = "@ViewBag.url" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a href="@ViewBag.url">Back to List</a>
    </form>
</div>
