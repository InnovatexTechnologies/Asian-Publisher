@model AsianPublisher.Models.OrderForm

@{
    ViewData["Title"] = "Delete";
}
@if (!string.IsNullOrEmpty(ViewBag.error))
{
<div class="alert alert-danger">
@ViewBag.error
 </div>
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>OrderForm</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Name
        </dt>
        <dd class="col-sm-10">
            @Model.name
        </dd>
        <dt class="col-sm-2">
           Address
        </dt>
        <dd class="col-sm-10">
            @Model.address
        </dd>
        <dt class="col-sm-2">
           MobileNo
        </dt>
        <dd class="col-sm-10">
            @Model.mobileNo
        </dd>
        <dt class="col-sm-2">
           Description
        </dt>
        <dd class="col-sm-10">
            @Model.description
        </dd>
        <dt class="col-sm-2">
           City
        </dt>
        <dd class="col-sm-10">
            @Model.city
        </dd>
        <dt class="col-sm-2">
           Email
        </dt>
        <dd class="col-sm-10">
            @Model.email
        </dd>
        <dt class="col-sm-2">
           Quantity
        </dt>
        <dd class="col-sm-10">
            @Model.quantity
        </dd>
        <dt class="col-sm-2">
           Book
        </dt>
        <dd class="col-sm-10">
            @Model.bookNav?.name
        </dd>
    </dl>

    <form asp-action="Delete">
            <input name = "url" hidden value = "@ViewBag.url" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a href="@ViewBag.url">Back to List</a>
    </form>
</div>
