@model AsianPublisher.Models.OrderMeta

@{
    ViewData["Title"] = "Delete";
}
@if (!string.IsNullOrEmpty(ViewBag.error))
{
<div class="alert alert-danger">
@ViewBag.error
 </div>
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>OrderMeta</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Order
        </dt>
        <dd class="col-sm-10">
            @Model.orderNav?.name
        </dd>
        <dt class="col-sm-2">
           BookId
        </dt>
        <dd class="col-sm-10">
            @Model.bookNav?.name
        </dd>
        <dt class="col-sm-2">
